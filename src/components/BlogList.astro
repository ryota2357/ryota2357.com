---
import type { CollectionEntry } from "astro:content";
import dayjs from "dayjs";

type Props = {
  posts: CollectionEntry<"blog">[];
};

const { posts } = Astro.props;
---

<div>
  <ul class="py-0 px-2 bg-white border border-solid rounded-md border-gray-600">
    {
      posts.map((post) => (
        <li class="py-2 px-0">
          <div class="text-gray-500">
            {dayjs(post.data.postdate).format("YYYY/MM/DD")}
          </div>
          <div class="text-[1.2rem] font-bold">
            <a href={`/blog/${post.slug}`}>{post.data.title}</a>
          </div>
          <div class="flex flex-row justify-end gap-2 text-[0.8rem]">
            {post.data.tags.map((tag) => (
              <a
                href={`/blog/tag/${tag}`}
                class="py-1 px-3 rounded text-white bg-gray-900"
              >
                {tag}
              </a>
            ))}
          </div>
        </li>
      ))
    }
  </ul>
</div>

<style lang="scss">
  ul {
    li + li {
      border-top: 1px solid #e3e3e3;
    }
  }
</style>
