---
import Base from "@/layouts/Base.astro";
import BlogList from "@/components/BlogList.astro";
import { getCollection } from "astro:content";

const allBlogCollection = (await getCollection("blog")).sort(
  (a, b) => b.data.postdate.valueOf() - a.data.postdate.valueOf(),
);
---

<Base title="Blog" slug="/blog">
  <h1 class="text-[2.5rem]">Blog</h1>
  <p class="mx-0 my-2">
    <a href="/blog/tag">タグの一覧</a>
  </p>
  <div>
    <BlogList posts={allBlogCollection} />
  </div>
</Base>
