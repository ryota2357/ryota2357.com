{
  "name": "ryota2357.com",
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "typecheck": "astro check && tsc --noEmit",
    "format": "prettier --write '**/*.{astro,ts,js,cjs,json,yaml,md}'",
    "format:check": "prettier --check '**/*.{astro,ts,js,cjs,json,yaml,md}'",
    "check": "biome check './'",
