{
  "name": "ryota2357.com",
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "typecheck": "astro check && tsc --noEmit",
    "format": "prettier --write '**/*.{astro,ts,js,cjs,json,yaml,md}'",
    "format:check": "prettier --check '**/*.{astro,ts,js,cjs,json,yaml,md}'",
    "check": "biome check './'",
    "check:apply": "biome check --apply './'",
    "textlint": "textlint './src/content/**/*.md'",
    "textlint:fix": "textlint --fix './src/content/**/*.md'",
    "new-post": "sh ./util/new-post.sh",
    "postbuild": "sh ./util/generate_simple_html_files.sh",
    "preinstall": "npx -y only-allow pnpm"
  },
  "dependencies": {
    "@astrojs/partytown": "2.1.1",
    "@astrojs/rss": "4.0.6",
    "@astrojs/tailwind": "5.1.0",
    "astro": "4.10.0",
    "@napi-rs/canvas": "0.1.53",
    "dayjs": "1.11.11",
    "destyle.css": "4.0.1",
    "sass": "1.77.6",
    "sharp": "0.33.4",
    "tailwindcss": "3.4.4",
    "typescript": "5.4.5",
    "unified": "11.0.5",
    "unist-util-is": "6.0.0",
    "unist-util-visit": "5.0.0",
    "unknownutil": "3.18.1",
    "vfile": "6.0.1"
  },
  "devDependencies": {
    "@astrojs/check": "0.8.2",
    "@biomejs/biome": "1.8.3",
    "@types/node": "20.14.11",
    "@types/unist": "3.0.2",
    "prettier": "3.3.3",
    "prettier-plugin-astro": "0.14.1",
    "prettier-plugin-tailwindcss": "0.6.5",
    "textlint": "14.0.4",
    "textlint-filter-rule-comments": "1.2.2",
    "textlint-rule-preset-ja-spacing": "2.4.3",
    "textlint-rule-preset-ja-technical-writing": "10.0.1",
    "unist-util-inspect": "8.1.0"
  },
  "volta": {
    "node": "20.15.1"
  }
