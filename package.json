    "textlint": "textlint './src/content/**/*.md'",
    "textlint:fix": "textlint --fix './src/content/**/*.md'",
    "new-post": "sh ./util/new-post.sh",
    "postbuild": "sh ./util/generate_simple_html_files.sh",
    "preinstall": "npx -y only-allow pnpm"
  },
  "dependencies": {
    "@astrojs/partytown": "2.1.0",
    "@astrojs/rss": "4.0.5",
    "@astrojs/tailwind": "5.1.0",
    "astro": "4.7.0",
    "canvas": "2.11.2",
    "dayjs": "1.11.10",
    "destyle.css": "4.0.1",
    "sass": "1.75.0",
    "sharp": "0.33.3",
    "tailwindcss": "3.4.3",
    "typescript": "5.4.5",
    "unified": "11.0.4",
    "unist-util-is": "6.0.0",
    "unist-util-visit": "5.0.0",
    "unknownutil": "3.18.0",
    "vfile": "6.0.1"
  },
  "devDependencies": {
    "@astrojs/check": "0.5.10",
    "@biomejs/biome": "1.7.1",
    "@types/node": "20.12.7",
    "@types/unist": "3.0.2",
    "prettier": "3.2.5",
    "prettier-plugin-astro": "0.13.0",
    "prettier-plugin-tailwindcss": "0.5.14",
    "textlint": "14.0.4",
    "textlint-filter-rule-comments": "1.2.2",
    "textlint-rule-preset-ja-spacing": "2.4.1",
    "textlint-rule-preset-ja-technical-writing": "10.0.1",
    "unist-util-inspect": "8.0.0"
