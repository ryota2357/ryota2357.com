{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "rangeStrategy": "pin",
  "timezone": "Asia/Tokyo",
  "schedule": "at any time",
  "prHourlyLimit": 0,
  "packageRules": [
    {
      "groupName": "pin",
      "matchUpdateTypes": ["pin"],
      "automerge": true,
      "ignoreTests": true
    },
    {
      "groupName": "types",
      "packagePatterns": ["^@types/"],
      "automerge": false,
      "ignoreTests": true
    },
    {
      "groupName": "gatsby",
      "packagePatterns": ["^gatsby"],
      "matchUpdateTypes": ["major", "minor", "patch", "digest"],
      "automerge": false
    }
  ]
}
